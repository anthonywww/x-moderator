# EditorConfig

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py,md}]
charset = utf-8

[*.py]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.{asm,ll,c,h,cpp,hpp,glsl,java,lua,json,html,css,js,css,php,sql,dm,sh,toml,rs,dockerfile,hbs,mustache}]
indent_style = tab
indent_size = 4

[Dockerfile]
indent_style = tab
indent_size = 4
